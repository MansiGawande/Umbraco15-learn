@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ArticleOverview>
@{
    Layout = "_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--  Links starts -->
    <link data-n-head="true" rel="icon" type="image/x-icon" href="~/images/favicon-32x32.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100;9..40,200;9..40,300;9..40,400;9..40,500;9..40,600;9..40,700;9..40,800;9..40,900;9..40,1000&family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.css" />
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/smartPro.css" />

    <!-- end links -->
</head>
<body>
    <div class="slider-wrapper" >
        <div class="container">

            <div class="swiper-container">
                <div class="swiper-wrapper">

                    @if (Model.ArticleContent != null)
                    {
                        @foreach (var item in Model.ArticleContent)
                        {
                            <div class="swiper-slide">
                                <div>
                                    <div class="image">
                                        <h2>@item.Value("header")</h2>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                @Html.Raw(@item.Value("leftDescription"))
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.Raw(item.Value("rightDescription"))
                                            </div>
                                        </div>
                                        <div class="slider-img">
                                            @{
                                                var articleImg = item.Value<IPublishedContent>("image");
                                                if(articleImg != null){
                                                    var mediaItem = Umbraco.Media(articleImg.Id);
                                                    @if(mediaItem != null){
                                                        var imgUrl = mediaItem.Url();
                                                        <div class="image" style="display:flex;justify-content:center;align-items:center">
                                                    <img src="@imgUrl" class="product-img" alt="mediaItem.Name">
                                                        </div>
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }}
                        </div>
                        <div class="swiper-hero-progress"></div>
                    </div>
             
        </div>
  </div>
  </body>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.5/js/swiper.min.js"></script>
<script type="text/javascript" src="https://unpkg.com/swiper@6.8.4/swiper-bundle.min.js"></script>

 <script src="~/scripts/smartPro.js"></script> 
</html>
