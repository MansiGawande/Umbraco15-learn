@using Umbraco15_learn.Controller;
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "_Layout.cshtml";
}

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form with Bootstrap 5</title>
  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
@*      /umbraco/api/ is a base route that Umbraco uses for its custom API controllers. *@
    <div class="container mt-5">
            <h2 class="text-center">User Information Form</h2>
        <form action="/umbraco/api/profile/createprofile" method="post" enctype="multipart/form-data">

                <!-- Name Field -->
                <div class="mb-3">
                    <label for="userName" class="form-label">Name</label>
                    <input class="form-control" id= "name" name = "username" type = "text" value = "@Model.Value("userName")" />
                </div>
             <!-- Contact Number Field -->
                <div class="mb-3">
                    <label for="mobileNumber" class="form-label">Contact Number</label>
                    <input class="form-control" id="mobileNumber" name="mobileNumber" type="text" required value="@Model.Value("mobileNumber")" />
                </div>

                <!-- City Field -->
                <div class="mb-3">
                    <label for="city" class="form-label">City</label>
                    <input class="form-control" id="city" name="city" type="text" required value="@Model.Value("city")" />
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input class="form-control" id="email" name="email" type="email" required value="@Model.Value("email")" />
                </div>

                <!-- Upload Image Field -->
                <!-- <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="image" class="form-control" id="image" accept="image/*" />
                </div> -->

                <!-- Date of Birth Field -->
                <div class="mb-3">
                    <label for="dob" class="form-label">Date of Birth</label>
                    @{
                        var dob = Model?.Value<DateTime>("dateOfBirth");
                        string formattedDob = dob.HasValue ? dob.Value.ToString("yyyy-MM-dd") : ""; // Format the date as yyyy-MM-dd
                    }
                    <input type="date" class="form-control" id="dob" name="dateOfBirth" value="@formattedDob" required>
                </div>
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
